extends layout

block content
    h1= title
    button.btn.btn-primary(onClick=`dispatch(\"/makeup/create\")`) Create Makeup
    - let items = results 
    div(class="container-fluid")
      div(class="row m-1")
        each m,index  in results 
          - let destination = `dispatch(\"/makeup/update?id=${m._id}\")`
          - let details = `dispatch(\"/makeup/detail?id=${m._id}\")`
          - let deleteItem = `dispatch(\"/makeup/delete?id=${m._id}\")`
            div(class="col-sm-2 p-10 m-2" class="m-1") 
              p Makeup brand: #{m.brand}
              p Makeup id: #{m.id}
              p Makeup Price: #{m.price}
              div(class="row")
                button.btn( class="btn-success ml-1", onclick= destination) Update
                button.btn( class="btn-secondary ml-1",onclick=details) View Details
                button.btn( class="btn-danger ml-1", onclick=deleteItem) Delete
    
    script.
      function dispatch(path){
          window.location.href=path
        }
